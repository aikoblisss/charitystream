{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/advertise/company",
      "dest": "/public/advertiser.html"
    },
    {
      "src": "/advertise/charity",
      "dest": "/public/charity.html"
    },
    {
      "src": "/advertise",
      "dest": "/public/advertise.html"
    },
    {
      "src": "/(about|admin|advertise|advertiser|auth|charity|impact|lander|reset-password|subscribe|verify-email|tutorial)$",
      "dest": "/public/$1.html"
    },
    {
      "src": "/subscribe/success",
      "dest": "/public/subscribe/success.html"
    },
    {
      "src": "/(about|admin|advertise|advertiser|auth|charity|impact|lander|reset-password|subscribe|verify-email|tutorial)\\.html",
      "dest": "/public/$1.html"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|mp4|webm|ogg|pdf))",
      "dest": "/public/$1"
    },
    {
      "src": "/Terms and Conditions/(.*)",
      "dest": "/public/Terms and Conditions/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/404.html",
      "status": 404
    }
  ]
}
